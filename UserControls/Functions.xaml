<UserControl x:Class="Telesyk.GraphCalculator.WPF.UserControls.FunctionsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Telesyk.GraphCalculator.WPF.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="295" d:DesignWidth="673" Height="337" Width="673">
	<StackPanel>
		<Grid>
			<TextBlock x:Name="textTitle" Grid.Row="1" Grid.Column="0" Foreground="#FFF9EFB8" FontSize="20" Margin="5,0,5,5">Функції</TextBlock>
			<local:ActionsUserControl Grid.Row="1" x:Name="controlActions" Grid.Column="1" HorizontalAlignment="Right" />
		</Grid>
		<StackPanel x:Name="panelFunctions" />
		<StackPanel x:Name="panelCombined" Orientation="Vertical" Visibility="Collapsed">
			<TextBlock Foreground="White" Margin="5,0,0,0">Комбінована функція:</TextBlock><TextBlock x:Name="textCombined" Margin="5,0,0,0" Foreground="#024884" />
		</StackPanel>
	</StackPanel>
</UserControl>
